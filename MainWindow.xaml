<Window x:Class="PackEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PackEditor"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:PackEditor.Views"

        Title="PackEditor" Height="550" Width="1000">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Compress"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem IsEnabled="False" Width="20" />
            <MenuItem Header="Editor" Command="{Binding ShowEditorCommand}"/>
            <MenuItem Header="Preview" Command="{Binding ShowPreviewCommand}"/>
        </Menu>

        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>
